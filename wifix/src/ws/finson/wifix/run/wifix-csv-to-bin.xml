<?xml version="1.0" encoding="UTF-8"?>
<config id="RecopyToBin" title="Process CSV to Binary">
    <application>
        <component type="ws.tuxi.lib.pipeline.ACPipelineEngine" classpath="ws.tuxi.lib.pipeline;ws.finson.wifix.app">
            <source type="CreateXMLDocument">
                <session>
                    <context>
                        <src-dir>raw</src-dir>
                        <dst-dir>post</dst-dir>
                    </context>
                </session>
            </source>
            <step type="ImportFromTableLayout">
                <file id="in" filename="sine-wave-reference.csv" />
            </step>
            <step type="SendXMLDocumentToSink">
                <file />
            </step>
            <step type="ExportToTableLayout">
                <file extension="bin" />
                <file extension="csv" suffix="-mirror" />
                <nodes label="Ch1" xpath="sensor-sequence/parameter[1]/sensor-values/value" />
                <nodes label="Ch2" xpath="sensor-sequence/parameter[2]/sensor-values/value" />
                <nodes label="Ch3" xpath="sensor-sequence/parameter[3]/sensor-values/value" />
                <nodes label="Ch4" xpath="sensor-sequence/parameter[4]/sensor-values/value" />
                <nodes label="Ch5" xpath="sensor-sequence/parameter[5]/sensor-values/value" />
                <nodes label="Ch6" xpath="sensor-sequence/parameter[6]/sensor-values/value" />
                <nodes label="Ch7" xpath="sensor-sequence/parameter[7]/sensor-values/value" />
                <nodes label="Ch8" xpath="sensor-sequence/parameter[8]/sensor-values/value" />
                <nodes label="Ch9" xpath="sensor-sequence/parameter[9]/sensor-values/value" />
                <nodes label="Ch10" xpath="sensor-sequence/parameter[10]/sensor-values/value" />
                <nodes label="Ch11" xpath="sensor-sequence/parameter[11]/sensor-values/value" />
            </step>
        </component>
    </application>
</config>